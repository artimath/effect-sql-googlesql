{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "incremental": true,
    "rootDir": "test",
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "noEmit": true
  },
  "include": ["test"],
  "references": [{ "path": "tsconfig.src.json" }]
}
